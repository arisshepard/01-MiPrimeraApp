@if (Cargando)
{
    <AlertaCarga />
}
else
{

    if (!HayDatos)
    {
        <AlertaNoDatos />
    }
    else
    {
        @FieldsTemplate;
    }
}

@code {
    [Parameter] public bool Cargando { get; set; }

    [Parameter] public bool HayDatos { get; set; }

    [Parameter]
    public RenderFragment FieldsTemplate { get; set; }

}